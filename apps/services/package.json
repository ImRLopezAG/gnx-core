  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/ts-config": "workspace:*",
    "tsup": "^8.0.1",
    "sqlite3": "^5.1.6",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@gnx-utilities/models": "*",
    "@typegoose/typegoose": "*",
