{
  "name": "@gnx-utilities/services",
  "version": "0.1.2",
  "description": "Generic services is a library that allows you to create services with a generic repository",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module",
  "files": [
    "lib/**/*.js",
    "lib/**/*.cjs",
    "lib/**/*.d.ts",
    "lib/**/*.d.cts"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ImRLopezAG/gnx-core.git"
  },
  "homepage": "https://gnx-udocs.vercel.app",
  "publishConfig": {
    "access": "public"
